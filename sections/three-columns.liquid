<link rel='stylesheet' href='{{ 'three-columns.css' | asset_url }}'>
<div class='three-columns'>
  <p class='title'>{{ section.settings.title }}</p>
  <div class='container'>
    {% for block in section.blocks %}
      <div class='content'>
        <div class='content-img'>
          <picture>
            <source media='(max-width: 1000px)' srcset='{{ block.settings.mb_img | image_url}}'>
            <source media='(min-width: 1000px)' srcset='{{ block.settings.pc_img | image_url}}'>
            <img
              src='{{ block.settings.pc_img | image_url }}'
              alt='img'
              width='100%'
              height='100%'
            >
          </picture>
        </div>
        <div class='content-wrapper'>
          <p class='content-title'>{{ block.settings.title }}</p>
          <div class='content-desc'>{{ block.settings.desc }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "three-columns",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "desc"
        },
        {
          "type": "image_picker",
          "id": "pc_img",
          "label": "PC Image"
        },
        {
          "type": "image_picker",
          "id": "mb_img",
          "label": "MB Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "three-columns"
    }
  ]
}
{% endschema %}
