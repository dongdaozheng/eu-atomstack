<style>
  .title-image .titlle {
    color: #333;
    text-align: center;
    font-family: 'Open Sans';
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  picture,
  img {
    display: block;
    width: 100%;
    height: 100%;
  }
  @media (max-width: 1000px) {
    .title-image {
      padding: 8vw 0px;
    }
    .title-image .titlle {
      font-size: 24px;
    }
  }
  @media (min-width: 1000px) {
    .title-image {
      padding: 60px 0px;
    }
    .title-image .titlle {
      font-size: 48px;
      margin-bottom: 32px;
    }
  }
</style>
<div class='title-image'>
  <p class='titlle'>{{ section.settings.title }}</p>
  <div class='container'>
    <picture>
      <source media='(max-width: 1000px)' srcset='{{ section.settings.mb_img | image_url}}'>
      <source media='(min-width: 1000px)' srcset='{{ section.settings.pc_img | image_url}}'>
      <img
        src='{{ section.settings.pc_img | image_url }}'
        alt='img'
        width='100%'
        height='100%'
      >
    </picture>
  </div>
</div>
{% schema %}
{
  "name": "title-image",
  "settings": [
    {
      "type": "image_picker",
      "id": "pc_img",
      "label": "PC Image"
    },
    {
      "type": "image_picker",
      "id": "mb_img",
      "label": "MB Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "title-image"
    }
  ]
}
{% endschema %}
