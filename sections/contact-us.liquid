<div class='contact-us'>
  <div class='contact-us-inner container'>
    <h2 class='contact-us-title'>{{ section.settings.title }}</h2>
    <div class='contact-us-content'>
      {%- for block in section.blocks -%}
        <div class='item'>
          <p class='title'>{{ block.settings.title }}</p>
          <img src='{{ block.settings.image |  image_url  }}' width='100%' height='100%' alt=''>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .contact-us {
    width: 100%;
    height: 100%;
    padding: 120px 0px;
  }

  .contact-us .contact-us-content {
    display: flex;
    align-items: center;
    justify-content: center;
    column-gap: 24px;
  }

  .contact-us .contact-us-title {
    color: #333;
    font-family: 'Open Sans';
    font-size: 52px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin-bottom: 32px;
    text-align: center;
  }
  .contact-us .title {
    color: #333;
    text-align: center;
    font-family: 'Open Sans';
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  .contact-us .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    background-color: #f8f8f8;
    height: 100%;
    border-radius: 10px;
    padding: 20px 45px 0px;
  }

  @media (max-width: 1000px) {
    .contact-us {
      width: 100%;
      height: 100%;
      padding: 60px 0px;
    }
    .contact-us .contact-us-content {
      flex-direction: column;
      row-gap: 10px;
    }
    .contact-us .contact-us-title {
      font-size: 24px;
    }
    .contact-us .title {
      font-size: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "contact-us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:Heading"
    }
  ],
  "blocks": [
    {
      "type": "contact-item",
      "name": "contact-item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "iamge"
        },
        {
          "type": "text",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "contact-us"
    }
  ]
}
{% endschema %}
