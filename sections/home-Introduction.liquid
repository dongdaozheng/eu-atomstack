<link rel='stylesheet' href='{{ 'home-Introduction.css' | asset_url }}'>
<div class='home-Introduction'>
  <div class='container'>
    <div class='title'>{{ section.settings.title }}</div>
    <div class='content'>
      {% for block in section.blocks %}
        {% if block.type == 'block' %}
          <div class='item'>
            <p class='item-title'>{{ block.settings.title }}</p>
            <p class='item-desc'>{{ block.settings.desc }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class='grid-container'>
      {% for block in section.blocks %}
        {% if block.type == 'grid' %}
          <div class='grid-item'>
            <img src='{{ block.settings.image | image_url }}' alt='' width='100%' height='100%'>
            <p class='grid-title'>{{ block.settings.title }}</p>
            <p class='grid-desc'>{{ block.settings.desc }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "home-Introduction",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "desc",
          "label": "desc"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        }
      ]
    },
    {
      "type": "grid",
      "name": "grid",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "desc"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "home-Introduction"
    }
  ]
}
{% endschema %}
