<link rel='stylesheet' href='{{ 'home-navbar.css' | asset_url }}'>
<div class='home-navbar'>
  <div class='container'>
    <p class='navbar-title'>{{ section.settings.title }}</p>
    <div class='icon-wrapper'>
      {% for block in section.blocks %}
        <div class='item'>
          <picture>
            <source media='(max-width: 1000px)' srcset='{{ block.settings.icon | image_url}}'>
            <source media='(min-width: 1000px)' srcset='{{ block.settings.icon | image_url}}'>
            <img
              src='{{ section.settings.icon | image_url }}'
              alt='img'
              width='100%'
              height='100%'
            >
          </picture>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "home-navbar",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "home-navbar"
    }
  ]
}
{% endschema %}
