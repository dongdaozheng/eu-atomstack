<link rel='stylesheet' href='{{ 'home-grid.css' | asset_url }}'>
<div class='home-grid'>
  <div class='container'>
    <div class='title'>{{ section.settings.title }}</div>
    <div class='content'>
      {% for block in section.blocks %}
        <div class='item'>
          <picture>
            <source media='(max-width: 1000px)' srcset='{{ block.settings.mb_img | image_url}}'>
            <source media='(min-width: 1000px)' srcset='{{ block.settings.pc_img | image_url}}'>
            <img
              src='{{ section.settings.pc_img | image_url }}'
              alt='img'
              width='100%'
              height='100%'
              loading='lazy'
            >
          </picture>
          <p class='item-title'>{{ block.settings.title }}</p>
          <p class='item-desc'>{{ block.settings.desc }}</p>
          <a class='btn' href='{{ block.settings.link }}'>
            {{ block.settings.btn_text }}
            <svg
              t='1724382858653'
              class='icon'
              viewBox='0 0 1024 1024'
              version='1.1'
              xmlns='http://www.w3.org/2000/svg'
              p-id='4240'
              width='15'
              height='15'
            >
              <path d="M341.957209 959.354678c-12.893658 0-25.842575-4.425799-36.386722-13.467733-23.493064-20.10592-26.224268-55.426357-6.064113-78.891791L603.929736 511.789199l-304.423361-355.206978c-20.160155-23.465434-17.427928-58.786894 6.064113-78.891791 23.437805-20.024056 58.786894-17.373693 78.837556 6.064113l335.675132 391.620305c17.974373 20.952194 17.974373 51.875484 0 72.827679l-335.675132 391.620305C373.371686 952.717514 357.691565 959.354678 341.957209 959.354678z" p-id="4241" fill="#ffffff"></path>
            </svg>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "home-grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    }
  ],
  "blocks": [
    {
      "type": "grid",
      "name": "grid",
      "settings": [
        {
          "type": "image_picker",
          "id": "pc_img",
          "label": "PC Image"
        },
        {
          "type": "image_picker",
          "id": "mb_img",
          "label": "MB Image"
        },
        {
          "type": "text",
          "id": "link",
          "label": "link"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "btn_text"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "desc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "home-grid"
    }
  ]
}
{% endschema %}
