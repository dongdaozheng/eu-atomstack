<desktop-navigation class='nav'>
  <ul class='nav-bar'>
    <li class='product'>
      Product
      <div class='container-wrapper'>
        <div class='container'>
          <div class='left'>
            <ul class='list'>
              {% for block in section.blocks %}
                {% if block.type == 'menu-product' %}
                  <li>
                    <img width='100%' height='100%' src='{{ block.settings.product_bar_img | image_url}}' alt=''>
                    <p>{{ block.settings.product_type }}</p>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
          <div class='right'>
            {% for block in section.blocks %}
              {% if block.type == 'menu-product' %}
                <div class='product-wrapper '>
                  {%- capture item -%}
                {%- for i in (1..block.settings.product_grid_columns) -%}
                {%- capture product_url -%}product_url_{{ i }}{%- endcapture -%}
                {%- capture product_image -%}product_image_{{ i }}{%- endcapture -%}
                {%- capture product_name -%}product_name_{{ i }}{%- endcapture -%}
                {%- capture product_desc -%}product_desc_{{ i }}{%- endcapture -%}
                {% if  block.settings[product_name] != blank %}
                  <a href="{{ block.settings[product_url] }}" >
                    <img src="{{ block.settings[product_image] | image_url }}" class='item-image' loading="lazy" alt="" width="100%" height="100%">
                    <p class="item-name">{{ block.settings[product_name]}}</p>
                    <p class="item-desc">{{block.settings[product_desc] }}</p>
                  </a> 
                  {% endif %} 
                {%- endfor -%}
              {%- endcapture -%}

                  {% if item != blank %}
                    <div class='top'>
                      <p>{{ block.settings.product_type }}</p>
                      <a href='{{ block.settings.product_view}}'>View All</a>
                    </div>

                    <div
                      class='menu-product'
                    >
                      {{ item }}
                    </div>
                  {% endif %}

                  <div class='product-collection'>
                    <div class='top'>
                      <p>{{ block.settings.product_accessories_type }}</p>
                      <a href='{{ block.settings.product_accessories_view }}'>View All</a>
                    </div>
                    {%- assign collection_handle = block.settings.collection -%}
                    {% assign collection = collections[collection_handle] %}

                    <ul class='collection-list'>
                      {% for product in collection.products %}
                        <li>
                          <a href='/products/{{ product.handle }}'>
                            <img
                              src='{{ product.featured_image | image_url }}'
                              class='item-image'
                              loading='lazyt'
                              width='100%'
                              height='100%'
                            >
                            <p class='item-name'>{{ product.title }}</p>
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </li>
